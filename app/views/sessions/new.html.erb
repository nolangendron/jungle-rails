<h1>Login</h1>

<%= form_tag '/login' do %>
<div class="well">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, nil, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
        <%= submit_tag "Submit", class: "btn btn-primary" %>
    </div>
  </div>
</div>

<% end %>