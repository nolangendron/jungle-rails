<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin: All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2"><h3>Category</h3></th>
        </tr>
      </thead>
      <tbody>
        <tr><%= render @categories %></tr>
      </tbody>
    </table>

  </div>

</section>